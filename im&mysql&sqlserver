redis 
root@redis1:~# cat docker/redis/docker-compose.yml
version: '3'

services:
    redis:
        restart: always
        image: redis:alpine
        ports:
            - 6379:6379
        volumes:
        - "/etc/timezone:/etc/timezone:ro"
        - "/etc/localtime:/etc/localtime:ro"
        - ./data:/data
mysql 
root@mysql1:~# cat docker/mysql/docker-compose.yml
version: '3'

services:
   mysql:
        restart: always
        image: mysql:5
        ports:
           - 3306:3306
        volumes:
        - "/etc/timezone:/etc/timezone:ro"
        - "/etc/localtime:/et//localtime:ro"
        - ./data:/var/lib/mysql:rw
        command: --default-authentication-plugin=mysql_native_password
        environment:
            MYSQL_ROOT_PASSWORD: password
mssql

version: '3'
services:

    db:
        restart: always
        image: microsoft/mssql-server-linux:latest
        hostname: sql1
        ports:
            - 1433:1433
            - 5022:5022
        environment:
            SA_PASSWORD: "pass"
            ACCEPT_EULA: "Y"
            MSSQL_ENABLE_HADR: "1"
            MSSQL_AGENT_ENABLED: "true"
            MSSQL_PID: "EnterpriseCore"
            MSSQL_COLLATION: "Chinese_PRC_CI_AS"
            MSSQL_LCID: "2052"
            MSSQL_BACKUP_DIR: "/var/opt/mssql/data/sqlbackupfolder/"
        volumes:
            - /opt/sqldata/data:/var/opt/mssql/data
            - /opt/sqldata/log:/var/opt/mssql/log
            - /otherdisk/filegroup1/sqldata/JubaoCloud_log.ldf:/var/opt/mssql/data/JubaoCloud_log.ldf
            - /otherdisk/filegroup1/sqldata/fg1:/var/opt/mssql/data/fg1
            - /etc/hosts:/etc/hosts:ro
        healthcheck:
            test: sqlcmd -S localhost -U SA -P 'pass' -Q 'select 1'
