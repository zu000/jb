im tomcat 
root@im1:~/docker/tomcat8# cat docker-compose.yml
version: '3'

services:
 tomcat:
      restart: always
      image: tomcat:8-alpine
      ports:
          - 80:8080
      volumes:
      - "/etc/timezone:/etc/timezone:ro"
      - "/etc/localtime:/etc/localtime:ro"
      - ./webapps:/usr/local/tomcat/webapps
      - ./logs:/usr/local/tomcat/logs
      
      
