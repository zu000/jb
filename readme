root@prometheus1-jp:~/docker/prometheus# cat docker-compose.yml
version: '3'
services:

    prom:
        restart: always
        image: prom/prometheus
        hostname: prom
        ports:
            - 9090:9090
#        environment:
        volumes:
            - "/etc/localtime:/etc/localtime:ro"
            - "/etc/timezone:/etc/timezone:ro"
            - "/etc/hosts:/etc/hosts:ro"
            - "./prometheus.yml:/etc/prometheus/prometheus.yml"
        command:
          - '--web.enable-lifecycle'
root@prometheus1-jp:~/docker/prometheus# cat prometheus.yml
